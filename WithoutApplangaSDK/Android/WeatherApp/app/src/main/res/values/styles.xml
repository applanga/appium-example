<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="home_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="day_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="day_temperature">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_item">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginLeft">@dimen/spacing_md</item>
        <item name="android:layout_marginRight">@dimen/spacing_md</item>
        <item name="android:paddingLeft">@dimen/spacing_sm</item>
        <item name="android:paddingRight">@dimen/spacing_sm</item>
    </style>

    <style name="settings_title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginLeft">@dimen/spacing_md</item>
        <item name="android:layout_marginRight">@dimen/spacing_md</item>
        <item name="android:paddingLeft">@dimen/spacing_sm</item>
        <item name="android:paddingRight">@dimen/spacing_sm</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>